generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  name          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // refresh token hash armazenado para revogar sess√µes
  refreshTokenHash String? 

  profile  Profile?
}

model Profile {
  id        String   @id @default(cuid())
  userId    String   @unique
  phone     String?
  document  String?   // CPF/CNPJ
  avatarUrl String?
  role      Role      @default(RECEPTION) // RBAC inicial

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  ADMIN
  DOCTOR
  RECEPTION
}